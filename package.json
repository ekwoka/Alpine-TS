{
  "type": "module",
  "scripts": {
    "build": "cd packages/alpinejs && pnpm run build",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --fix .",
    "lint:prettier": "prettier --write .",
    "lint:staged": "lint-staged",
    "precommit": "run-s lint:staged build size",
    "prepare": "husky install",
    "size": "node scripts/getSize.js",
    "size:test": "NODE_ENV=test node scripts/getSize.js",
    "test": "vitest",
    "postinstall": "patch-package",
    "sandbox": "vite ./sandbox"
  },
  "devDependencies": {
    "@milahu/patch-package": "6.4.14",
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "@vitest/coverage-c8": "0.29.8",
    "esbuild": "0.17.15",
    "eslint": "8.37.0",
    "gzip-size": "7.0.0",
    "happy-dom": "9.1.9",
    "husky": "8.0.3",
    "lint-staged": "13.2.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.7",
    "pretty-bytes": "6.1.0",
    "typescript": "5.0.3",
    "vite": "4.2.1",
    "vite-plugin-dts": "2.2.0",
    "vite-tsconfig-paths": "4.0.8",
    "vitest": "0.29.8",
    "vitest-dom": "0.0.4"
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "pnpm": {
    "overrides": {
      "@babel/generator@<7.19.3": "7.19.3",
      "@babel/types@<7.21.4": "7.21.4",
      "@jridgewell/sourcemap-codec@<1.4.15": "1.4.15",
      "argparse@<2.0.1": "2.0.1",
      "brace-expansion@<2.0.1": "2.0.1",
      "cli-truncate@<3.1.0": "3.1.0",
      "color-convert@<2.0.1": "2.0.1",
      "color-name@<1.1.4": "1.1.4",
      "commander@<10.0.0": "10.0.0",
      "cross-spawn@<7.0.3": "7.0.3",
      "emoji-regex@<9.2.2": "9.2.2",
      "escape-string-regexp@<4.0.0": "4.0.0",
      "eslint-scope@<7.1.1": "7.1.1",
      "estraverse@<5.3.0": "5.3.0",
      "fs-extra@<10.1.0": "10.1.0",
      "glob-parent@<6.0.2": "6.0.2",
      "globals@<13.20.0": "13.20.0",
      "has-flag@<4.0.0": "4.0.0",
      "jsonfile@<6.1.0": "6.1.0",
      "minimatch@<5.1.6": "5.1.6",
      "p-limit@<4.0.0": "4.0.0",
      "pidtree@<0.6.0": "0.6.0",
      "resolve@<1.22.2": "1.22.2",
      "semver@<7.3.8": "7.3.8",
      "shebang-command@<2.0.0": "2.0.0",
      "shebang-regex@<3.0.0": "3.0.0",
      "slash@<3.0.0": "3.0.0",
      "source-map@<0.6.1": "0.6.1",
      "supports-color@<7.2.0": "7.2.0",
      "tslib@<2.5.0": "2.5.0",
      "type-fest@<0.21.3": "0.21.3",
      "typescript@<5.0.3": "5.0.3",
      "universalify@<2.0.0": "2.0.0",
      "which@<2.0.2": "2.0.2",
      "wrap-ansi@<7.0.0": "7.0.0",
      "yocto-queue@<1.0.0": "1.0.0"
    }
  }
}
