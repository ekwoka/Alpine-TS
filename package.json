{
  "name": "alpinejs",
  "version": "13.12.1",
  "type": "module",
  "exports": {
    ".": {
      "import": "./packages/alpinejs/dist/index.js",
      "types": "./packages/alpinejs/dist/index.d.ts"
    },
    "./types": {
      "import": "./packages/alpinejs/dist/types.js",
      "types": "./packages/alpinejs/dist/types.d.ts"
    },
    "./package.json": "./packages/alpinejs/package.json"
  },
  "files": [
    "packages/alpinejs/dist",
    "packages/alpinejs/src"
  ],
  "scripts": {
    "build": "cd packages/alpinejs && pnpm run build",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --fix .",
    "lint:prettier": "prettier --write .",
    "lint:staged": "lint-staged",
    "precommit": "run-s lint:staged build size",
    "prepare": "husky install",
    "size": "node scripts/getSize.js",
    "size:test": "NODE_ENV=test node scripts/getSize.js",
    "test": "vitest",
    "postinstall": "patch-package",
    "sandbox": "vite ./sandbox"
  },
  "devDependencies": {
    "@milahu/patch-package": "6.4.14",
    "@trivago/prettier-plugin-sort-imports": "4.2.0",
    "@types/node": "20.8.3",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "@vitest/coverage-c8": "0.32.2",
    "esbuild": "0.19.4",
    "eslint": "8.51.0",
    "happy-dom": "9.1.9",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "pretty-bytes": "6.1.1",
    "typescript": "5.2.2",
    "vite": "4.4.11",
    "vite-plugin-dts": "3.6.0",
    "vite-tsconfig-paths": "4.2.1",
    "vitest": "0.34.6",
    "vitest-dom": "0.1.1"
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "pnpm": {
    "overrides": {
      "typescript@<5.1.6": "5.1.6",
      "semver@<7.5.2": ">=7.5.2",
      "happy-dom@>9.1.9": "9.1.9"
    }
  }
}
